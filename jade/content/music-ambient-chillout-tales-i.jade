extends ../includes/_layout

block head
  - var coverUrl = 'medien-index/cover-ambient-chillout-tales-i.jpg'
  - var title = 'Ambient&nbsp;&amp;&nbsp;Chillout&nbsp;Tales&nbsp;I'

  +Header({title: title + ' by Polarity', base:""})

  // facebook
  <meta property="og:title" content="Polarity - "+title>
  <meta property="og:site_name" content="Polarity Music">
  <meta property="og:url" content="http://polarity-dnb.de/music-ambient-chillout-tales-i.html">
  <meta property="og:description" content="With a mixture of Drum &amp; Bass and Ambient 'Dunkel' brings you four new dark rythmic ambient tunes by polarity.">
  <meta property="og:type" content="music">
  <meta property="og:image" content="http://polarity-dnb.de/#{coverUrl}">

  style.
    body {
      background-color: #000;
    }
    .music-cover-list {
      display: flex;
      justify-content: center;
    }
    .music-cover-list:last-of-type {
      margin-bottom: 100px;
    }
    .music-cover-list .music-cover {
      background-size: cover;
      margin: 5px;
      width: 100%;
      max-width: 740px;
      position: relative;
      overflow: hidden;
    }
    .music-cover-list .music-cover:before {
      content: "";
      display: block;
      padding-top: 100%; /* initial ratio of 1:1*/
    }
    .music-cover-list .music-cover .music-content {
      position: absolute;
      top: 0;
      left: 0;
      color: white;
      display: none;
    }
    .music-services {
      justify-content: center;
      display: flex;
      flex-wrap: wrap;
    }
    .music-services a {
      background-size: contain;
      background-repeat: no-repeat;
      width: 80px;
      height: 80px;
      display: block;
      text-indent: -999px;
      overflow: hidden;
      margin: 5px;
    }
    .music-services a:not([href]) {
      opacity: 0.2;
    }

block body
  div.music-cover-list
    a.music-cover(href="https://polarity.bandcamp.com/album/ambient-chillout-tales-i", style="background-image: url("+coverUrl+");")
      .music-content
        h2 polarity - dunkel

