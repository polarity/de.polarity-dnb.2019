	script(src="https://cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.0.52/wavesurfer.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
	script(src="js/static.js")

	style.
		body {
			background-image: url(https://polaritymusic.s3.amazonaws.com/album/growing-old/Polarity_growing_old_cover_small.jpg);
			background-size: contain;
			background-position: center;
			background-repeat: no-repeat;
			background-color: #121617;
		}
		ul.track_list li a {
			cursor: pointer;
		}
		.mp3player-playpause-button {
			display: inline-block;
			outline: 1px solid #fff;
			cursor: pointer;
			padding: 2px 15px;
			background-color: #939386;
		}
		#waveform {
			position: relative;
		}
		#waveform .loading {
			display: flex;
			flex-direction: column;
			z-index: 5;
		}
		#waveform .loading .progressbar{
			background-color: #939386;
			height: 128px;
			width: 0;
			position: absolute;
			top: 0;
			text-align: center;
			overflow: hidden;
		}
		#waveform .loading .info {
			top: 0;
			position: absolute;
			width: 100%;
			text-align: center;
		}

