	style.
		.music-cover-list {
			display: flex;
		}
		.music-cover-list:last-of-type {
			margin-bottom: 100px;
		}
		.music-cover-list .music-cover {
			background-size: cover;
			margin: 5px;
			width: 33%;
			position: relative;
			overflow: hidden;
		}
		.music-cover-list .music-cover:before {
			content: "";
			display: block;
			padding-top: 100%; /* initial ratio of 1:1*/
		}
		.music-cover-list .music-cover .music-content {
			position: absolute;
			top: 0;
			left: 0;
			color: white;
			display: none;
		}

